# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these values from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api

# Supabase Project URL (Settings > API > Project URL)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co

# Supabase Anon Key - Public (Settings > API > Project API keys > anon public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key - Secret (Settings > API > Project API keys > service_role)
# ⚠️ NEVER expose this key in client-side code or commit to git
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application base URL (for redirects and email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Magic link expiration time in hours (default: 72 hours = 3 days)
MAGIC_LINK_EXPIRATION_HOURS=72

# ===========================================
# OPTIONAL - EMAIL PROVIDER (Resend)
# ===========================================
# Only needed if you want to send emails
# Get your key at: https://resend.com/api-keys

# RESEND_API_KEY=re_xxxxxxxxxxxxx

# ===========================================
# OPTIONAL - DEVELOPMENT/DEBUG
# ===========================================

# Enable verbose Supabase logging (true/false)
# SUPABASE_DEBUG=false

# Skip authentication for development (true/false)
# ⚠️ NEVER enable in production
# DEV_SKIP_AUTH=false 
